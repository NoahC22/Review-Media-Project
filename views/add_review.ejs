<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <div class="container-fluid">
            <div class="pb-2 mt-4 mb-3">
                <a href="/list"><button type="button" class="btn btn-secondary">Back</button></a>
            </div>
        </div>

        <form method="POST" action="/addform" enctype="multipart/form-data">
            <% if (locals.errors) { %>
                <div class="alert alert-danger" role="alert">
                  <ul>
                    <% for (let error of errors) { %>
                      <li><%= error %></li>
                    <% } %>
                  </ul>
                </div>
              <% } %>
        <div class="container-fluid" style="width: 750px;">
            <label>Select Type of Media</label>
            <select name="mediatype" class="form-select" aria-label="Default select example">
                <option selected>Choose One</option>
                <option value="1">Book</option>
                <option value="2">Game</option>
                <option value="3">Movie</option>
            </select>

            <br>

            <div class="form-group">
                <label for="exampleFormControlInput1">Name of Review</label>
                <input class="form-control" id="exampleFormControlInput1" value="<%= locals.rname %>" name="reviewname">
            </div>

            <br>

            <div class="form-group">
                <label for="exampleFormControlTextarea1">Create Review</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="reviewdescription"><%= locals.rdesc %></textarea>
            </div>

            <br>

            <label for="customRange2" class="form-label">Rate 1-10</label>
            <input min="1" max="10" step="0.5" type="number" name="reviewrating" class="form-control"/>

            <br>

            <div class="custom-file">
                <label>Input Picture for Review</label>
                <br>
                <input type="file" class="custom-file-input" id="inputGroupFile04" accept="image/jpeg, image/png, image/jpg" name="rimg">
            </div>

            <br>

            <div class="text-center">
                <button type="submit" class="btn btn-secondary">Submit</button>
            </div>

        </div>
        </form>

    </body>
</html>