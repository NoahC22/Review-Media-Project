<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>

    <body style="background-color: darkblue;">

        <div class="container py-5 h-50">
            <div class="row d-flex justify-content-center align-items-center h-50">
              <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 3rem;">
                  <div class="card-body p-5 text-center">

                    <button class="btn btn-outline-light btn-lg px-2" type="submit">Back</button>
        
                    <div class="mb-md-1 mt-md-1 pb-1">
        
                      <h2 class="fw-bold mb-2 text-uppercase">Sign Up</h2>
                      <p class="text-white-50 mb-5">Enter New Credentials</p>
        
                      <div class="form-outline form-white mb-4">
                        <input type="signusername" id="signuser" placeholder="Create Username" class="form-control form-control-lg" />
                      </div>
        
                      <div class="form-outline form-white mb-4">
                        <input type="signpassword" id="signpass" placeholder="Create Password" class="form-control form-control-lg" />
                      </div>

                      <div class="form-outline form-white mb-4">
                        <input type="confpassword" id="confpass" placeholder="Confirm Password" class="form-control form-control-lg" />
                      </div>
                
                      <button class="btn btn-outline-light btn-lg px-2" type="submit">Sign Up</button>
        
                    </div>
        
                  </div>
                </div>
              </div>
            </div>
          </div>

    </body>
</html>