<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>

        <div class="container-fluid">
            <div class="pb-2 mt-4 mb-3">
                <a href="/home"><button type="button" class="btn btn-secondary">Back</button></a>
            </div>

            <div class="row border-bottom">
                <div class="col-3">
                    Image
                </div>

                <div class="col-3">
                    Type
                </div>

                <div class="col-3">
                    Name
                </div>

                <div class="col-3">
                    Rating
                </div>
            </div>

            <% for(let r of rvs) { %>
            <div class="row">
                <div class="col-3">
                    <img class="d-block w-50 h-100" src="<%= r.img1 %>">
                </div>

                <div class="col-3">
                    <%= r.review_type %>
                </div>

                <div class="col-3">
                    <a href="/review"><%= r.review_title %></a>
                </div>

                <div class="col-3">
                    <%= r.review_rating %>
                </div>

                <% if(showuser) { %>
                <div class="pb-2 mt-4 mb-2">
                    <a href="/delete/<%= r._id %>" class="button"><button type="button" class="btn btn-secondary">Delete</button></a>
                </div>
                <% } %>
            </div>

            <br>

            <% } %>

            <% if(showuser) { %>
            <div class="pb-2 mt-4 mb-2">
                <a href="/add"><button type="button" class="btn btn-secondary">Add New Review</button></a>
            </div>
            <% } %>
        </div>



    </body>
</html>